<div class="row">
  <div class="large-12">
    <h1>Categories</h1>

    <%- if !@categories.empty? -%>
      <table>
        <tr>
          <th>Name</th>
          <th>Created</th>
          <th></th>
        </tr>

        <%- @categories.each do |category| -%>
          <tr>
            <td><%= link_to category.name, "/categories/" + category.to_param + "/drinks" %></td>
            <td><%= category.created_at %></td>
            <td>
              <%= link_to 'Delete',
                '/categories/' + category.to_param,
                method: :delete %>
            </td>
          </tr>
        <%- end -%>
      </table>

    <%- end -%>
  </div>
</div>
